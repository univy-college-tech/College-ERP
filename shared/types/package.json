{
    "name": "@college-erp/types",
    "version": "1.0.0",
    "private": true,
    "description": "Shared TypeScript types for College ERP",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "import": "./dist/*.mjs",
            "require": "./dist/*.js",
            "types": "./dist/*.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "tsup": "^8.0.2",
        "typescript": "^5.4.2"
    }
}